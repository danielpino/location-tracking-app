<form action="/users/{{user.id}}?_method=PUT" method="POST">

    <div class="input-field col s12">
        <input type="hidden" name="id" value="{{user.id}}">
    </div>

    <div class="input-field col s12">
        <label for="firstName">First Name:</label>
        <input type="text" name="firstName" value="{{user.firstName}}">
    </div>

    <div class="input-field col s12">
        <label for="lastName">Last Name:</label>
        <input type="text" name="lastName" value="{{user.lastName}}">
    </div>

    <div class="input-field col s12">
        <label for="email">Email:</label>
        <input type="text" name="email" value="{{user.email}}">
    </div>
    <br>
    <button class="btn waves-effect waves-light" type="submit" name="action">Edit User</button>

</form>

<form action='/users/{{user.id}}?_method=DELETE' method="post">
    <br>
    <button class="btn waves-effect waves-light" type="submit" name="action">Delete User</button>
    <br>
</form>